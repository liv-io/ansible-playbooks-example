[fw]
fw01.example.com ansible_python_interpreter=/usr/local/bin/python3.7
fw02.example.com ansible_python_interpreter=/usr/local/bin/python3.7

#-------------------------------------------------------------------------------
# NAME SERVER
#-------------------------------------------------------------------------------

[ns]
